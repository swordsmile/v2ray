{
  "log" : {
    "access": "/var/log/v2ray/access.log",
    "error": "/var/log/v2ray/error.log",
    "loglevel": "warning"
  },
  "inbound": {
    "port": 443,
    "listen": "127.0.0.1",
    "protocol": "vmess",
    "settings": {
      "clients": [
        {
          "id": "uuidgen",
          "level": 1,
          "alterId": 64
        }
      ]
    },
    "streamSettings": {
        "network": "ws",
        "security": "auto",
        "wsSettings": {
            "connectionReuse": true,
            "path": "/",
            "header": {
                "Host": "xxx.com"
            }
        }
    }
  },
  "inboundDetour": [
{
    "port": 443,
    "listen": "0.0.0.0",
    "protocol": "vmess",
    "settings": {
      "clients": [
        {
          "id": "uuidgen",
          "level": 1,
          "alterId": 64
        }
      ]
    },
    "streamSettings": {
        "network": "kcp",
        "security": "auto",
        "kcpSettings": {
            "mtu": 1350,
            "tti": 20,
            "uplinkCapacity": 10,
            "downlinkCapacity": 100,
            "congestion": false,
            "readBufferSize": 1,
            "writeBufferSize": 1,
            "header": {
                "type": "none"
            }
        }
    }
},
{
    "tag": "tg-in",
    "port": 443,
    "listen": "0.0.0.0",
    "protocol": "mtproto",
    "settings": {
          "users": [{"secret": "openssl rand -hex 16"}]
    }
},
{
    "port": 443,
    "listen": "0.0.0.0",
    "protocol": "shadowsocks",
    "settings": {
          "email": "xxx@163.com",
          "method": "chacha20-ietf-poly1305",
          "password": "xxx",
          "udp": true,
          "level": 1,
          "ota": false
    }
},
{
    "port": 443,
    "listen": "0.0.0.0",
    "protocol": "vmess",
    "settings": {
      "clients": [
        {
          "id": "uuidgen",
          "level": 1,
          "alterId": 64
        }
      ]
    },
    "streamSettings": {
        "network": "h2",
        "security": "tls",
        "tlsSettings": {
            "allowInsecure": false,
            "certificates": [
            {
                "certificateFile": "/etc/nginx/ssl/nginx.crt",
                "keyFile": "/etc/nginx/ssl/ssl.key"
            }
                ]
        },
        "httpSettings": {
            "path": "/"
        }
    }
}
  ],
  "outbound": {
    "protocol": "freedom",
    "settings": {}
  },
  "outboundDetour": [
    {
      "protocol": "blackhole",
      "settings": {},
      "tag": "blocked"
    },
    {
      "protocol": "mtproto",
      "settings": {},
      "tag": "tg-out"
    }
  ],
  "routing": {
    "strategy": "rules",
    "settings": {
      "rules": [
        {
          "type": "field",
          "inboundTag": ["tg-in"],
          "outboundTag": "tg-out"
        },
        {
          "type": "field",
          "ip": [
            "0.0.0.0/8",
            "10.0.0.0/8",
            "100.64.0.0/10",
            "127.0.0.0/8",
            "169.254.0.0/16",
            "172.16.0.0/12",
            "192.0.0.0/24",
            "192.0.2.0/24",
            "192.168.0.0/16",
            "198.18.0.0/15",
            "198.51.100.0/24",
            "203.0.113.0/24",
            "::1/128",
            "fc00::/7",
            "fe80::/10"
          ],
          "outboundTag": "blocked"
        }
      ]
    }
  }
}
